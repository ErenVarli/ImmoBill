{% extends 'base.html.twig' %}

{% block title %}
   {{ bien.description }}
{% endblock %}

{% block body %}
  <img id="image-bien" style="border-radius: 15px;" src="{{ asset('images/biens/' ~ bien.image ~ '') }}" class="img-fluid rounded-start" width="450" height="450" />

  <div class="bloc-bien">
    {% block titre %}
      <h1 style="text-transform:uppercase; margin-bottom: 50px; text-align:center;">{{ bien.description }}</h1>
    {% endblock %}

    <div class="descr">
      <p class="card-text">Type : {{ bien.type }}</p>
      <p class="card-text">Prix: {{ bien.prix }} €</p>
      <p class="card-text">Surface: {{ bien.surface }} m²</p>
      <p class="card-text">Nombre de pièces: {{ bien.nbPiece }} pièces</p>
      <p class="card-text">Nombre de chambres: {{ bien.nbChambre }} chambres</p>
      <p class="card-text">Nombre d'étages: {{ bien.etage }} étages</p>
      <p class="card-text">Adresse: {{ bien.rue }} - {{ bien.cp }} {{ bien.ville }}</p>
    </div>
  </div>
{% endblock %}
