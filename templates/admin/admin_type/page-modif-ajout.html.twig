{% extends 'base.html.twig' %}

{% block title %}
  {% if isModification %}
    Modification {{ type.nom }}
  {% else %}
    Ajout d'un type
  {% endif %}
{% endblock %}

{% block body %}
<div style="margin-top: 50px;">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            {% if isModification %}
              Modification {{ type.nom }}
            {% else %}
              Ajout d'un type
            {% endif %}
          </div>
          <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
            <div class="d-flex un-sur-autre justify-content-center">
              <button class="btn btn-primary" type="submit">ENREGISTRER</button>
              <a class="btn-retour-un-sur-autre" href="{{ path('lesTypesAdmin') }}">Retour</a>
            </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
