{% extends 'base.html.twig' %}

{% block title %}
	Proprio
{% endblock %}

{% block body %}
	{% block style %}
		<style>
			body {
				background-color: white;
			}
			.btn {
				border-radius: 10px;
				margin: 5px;
			}
			img {
				border-radius: 15px;
			}
			#bouton-ajouter {
				margin: 2rem 0;
			}
		</style>
	{% endblock %}
	<main class="container">
		<div class="example-wrapper">
			<h1 class="my-4">Proprio</h1>
			<table class="table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Nom</th>
						<th>Pr√©nom</th>
						<th>Mail</th>
						<th>Tel.</th>
						<th>Adresse</th>
						<th>Action</th>

					</tr>
				</thead>
				<tbody>
					<a id="bouton-ajouter" class="btn btn-primary" href="{{ path('admin_proprio_ajout') }}">Ajouter</a>

					{% for leProprio in lesProprio %}
						<tr>
							<td>{{ leProprio.id }}</td>
							<td>{{ leProprio.nom }}</td>
							<td>{{ leProprio.prenom }}</td>
							<td>{{ leProprio.mail }}</td>
							<td>{{ leProprio.tel }}</td>
							<td>{{ leProprio.adresse }}</td>


							<td>
								<a class="btn btn-secondary" href="{{ path('admin_proprio_modification', { id: leProprio.id }) }}">Modifier</a>
								<form method="POST" action="{{ path('admin_proprio_suppression', { id: leProprio.id }) }}">
									<input type="hidden" name="_method" value="delete"/>
									<input type="hidden" name="_token" value="{{ csrf_token('SUP' ~ leProprio.id) }}"/>
									<input type="submit" class="btn btn-danger" value="Supprimer"/>
								</form>

							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</main>
	{% block stylesheets %}
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/css/bootstrap.min.css" integrity="sha512-w7GJhE5tSJ2kpD/3rWlz6xgZpVEQ6YjfB8/+UJn0e+Wp8IvvsCt/YZ21zTUJlZgjB37U/+4V0Ef7Mhg5QN5A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	{% endblock %}
{% endblock %}
