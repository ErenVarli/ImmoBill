{% extends 'base.html.twig' %}

{% block title %}Les Types{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{message}}
    </div>
{% endfor %}        
{% for message in app.flashes('failed') %}
    <div class="alert alert-danger">
        {{message}}
    </div>
{% endfor %}
{% block style %}
		<style>
			body {
				background-color: #FCFCFC;
			}
		</style>
	{% endblock %}
<main class="container">
		<div class="example-wrapper">
			<div class="proprio-ajout">

    <h1 class="my-4">Listes des membres</h1>

</div>
<a class="btn btn-primary bouton-ajout button" href="{{ path('admin_membre_ajout') }}">Ajouter</a>
<table class="table">
    <thead>
        <tr>
            <th>Mail</th>
            <th>Mot de passe</th>
            <th>Nom</th>
            <th>Prenom</th>
            
        </tr>
    </thead>
    <tbody>
        {% for membre in membres %}    
        <tr>
            
            <td>{{ membre.email }}</td>
            <td>{{ membre.password }}</td>
            <td>{{ membre.nom }}</td>
            <td>{{ membre.prenom}}</td>
            
            <td>
               <a class="btn btn-secondary  bouton-proprietaire" href="{{ path('admin_membre_modification', {'id': membre.id }) }}">Modifier</a>
            </td>
                    <td>
                    <form method="POST" action="{{path("admin_membre_suppression", {'id': membre.id})}}" onsubmit="return confirm('Un proprietaire va être supprimé, êtes vous sûr?')">
                        <input type="hidden" name="_method" value="delete">
                        <input type="hidden" name="_token" value="{{csrf_token('sup'~ membre.id)}}">
                        <input type="submit" class="btn btn-danger bouton-proprietaire" value="Supprimer">
                    </form>
                
            </td>
        </tr>
        {% endfor %}
    </tbody>        
</table>
</div>
</main>
{% block stylesheets %}
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0-alpha1/css/bootstrap.min.css" integrity="sha512-w7GJhE5tSJ2kpD/3rWlz6xgZpVEQ6YjfB8/+UJn0e+Wp8IvvsCt/YZ21zTUJlZgjB37U/+4V0Ef7Mhg5QN5A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
	{% endblock %}
{% endblock %}
